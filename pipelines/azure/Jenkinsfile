        //                             cat report-task.txt
        //                         fi
        //                         '''
        //                     }
        //                 }
        //             }
        //         }
        //     }
        // }

        // stage('ðŸ›¡ï¸ Security Scan - Trivy') {
        //     steps {
        //         echo "ðŸ›¡ï¸ Scanning image for vulnerabilities with Trivy..."
        //         script {
        //             try {
        //                 // Scan da imagem com Trivy via API
        //                 def trivyResponse = sh(
        //                     script: """
        //                         curl -X POST ${TRIVY_SERVER_URL}/scan \\
        //                              -H "Content-Type: application/json" \\
